{% extends 'layout_jo.html.twig' %}

{% block title %}
	Créer un compte
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-center align-items-center">
		<div class="w-50">
			<h1 class="text-center mt-4">Créer un compte</h1>

			{{ form_errors(registrationForm) }}

			{{ form_start(registrationForm) }}

			<div class="form-group mb-3">
				{{ form_label(registrationForm.email) }}
				{{ form_widget(registrationForm.email) }}
				{% include 'partials/form_errors.html.twig' with { 'errors': registrationForm.email.vars.errors } %}
			</div>

			<div class="form-group mb-3">
				{{ form_label(registrationForm.plainPassword) }}
				{{ form_widget(registrationForm.plainPassword) }}
				{% include 'partials/form_errors.html.twig' with { 'errors': registrationForm.plainPassword.vars.errors } %}
			</div>

			<div class="form-group mb-3">
				{{ form_row(registrationForm.roles) }}
			</div>

			<button class="btn btn-outline-success w-100" type="submit">{{ button_label|default('Créer mon compte') }}</button>

			{{ form_end(registrationForm) }}
		</div>
	</div>
{% endblock %}
