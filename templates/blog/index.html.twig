{% extends 'layout_blog.html.twig' %}

{% block title %}
	Mes articles
{% endblock %}

{% block body %}
	<div class="text-center">
		<h1>Liste des articles du Blog</h1>
		<h4>{{articles | length}}
			articles trouvés
		</h4>
	</div>
	<a href="{{ path('app_blog_new') }}" class="btn btn-outline-primary mb-4">Create new</a>

	<table class="table table-hover text-center">
		<thead>
			<tr>
				<th>id</th>
				<th>Nb Categories associées</th>
				<th>Title</th>
				<th>Author</th>
				<th>Content</th>
				<th>Image</th>
				<th>CreatedAt</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for article in articles %}
				<tr>
					<td>{{ article.id }}</td>
					<td>{{ article.categories|length }} catégorie(s) associée(s)</td>
					<td>
						<a href="{{ path('app_blog_show', {'slug': article.slug }) }}">{{ article.title }}</a>
					</td>
					<td>{{article.user.fullName}}</td>
					<td>{{ article.content }}</td>
					<td>
						<img src={{ article.imageUrl }} width="100" height="100">
					</td>
					<td>{{ article.createdAt|date('d/m/Y') }}</td>
					<td>
						<a href="{{ path('app_blog_show', {'slug': article.slug }) }}" class="btn btn-outline-secondary">show</a>
						<a href="{{ path('app_blog_indexOld', {'id': article.id, 'nom': 'blablabla' }) }}" class="btn btn-outline-info">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7" class="text-center">Aucun article pour le moment.</td>
				</tr>
			{% endfor %}
		</tbody>
	</tbody>
</table>{% endblock %}
