{% extends 'layout_jo.html.twig' %}

{% block title %}
	Page d'accueil
{% endblock %}

{% block body %}

	{# <h1 class="text-center mb-4">Projet de symfony</h1> #}
	<div class="image-container">
		<img src="{{ asset('assets/images/home_img.jpeg') }}" height="500px" width="500px"/>
	</div>
	<style>
		.image-container {
			position: relative;
			width: 100%;
			height: 550px; 
			overflow: hidden;
		}

		.image-container img {
			width: 100%;
			height: 100%;
			object-fit: cover;
			filter: brightness(1.2); 
		}

		.image-container::before {
			content: "";
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			background: linear-gradient(to left, rgba(255, 255, 255, 1), rgba(255, 255, 255, 0) 50%, rgba(255, 255, 255, 1));
			z-index: 1;
			pointer-events: none;
		}
	</style>
{% endblock %}
