{% extends 'layout_jo.html.twig' %}

{% block title %}
	Détail d'un athlète
{% endblock %}

{% block body %}
	<a href="{{ path('app_athlete_index') }}" class="btn btn-outline-primary">
		<i class="fa-solid fa-arrow-left fa-2xl"></i>&nbsp;Retour à la liste
	</a>

	<hr>

	<div class="d-flex justify-content-between mt-2">
		<a href="{{ path('app_athlete_edit', {'id': athlete.id }) }}" class="btn btn-outline-info">
			<i class="fa-solid fa-pen-to-square fa-lg"></i>&nbsp;Modifier
		</a>
		{{ include('athlete/_delete_form.html.twig') }}
	</div>

	<h1 class="text-center">Détail de l'athlète
		{{athlete.nomPrenom}}
	</h1>

	<div class="card-body">
		<div class="row justify-content-center">
			<div class="content"><br>
				<table class='table table-striped'>
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ athlete.id }}</td>
						</tr>
						<tr>
							<th>Nom & prénom</th>
							<td>{{ athlete.nomPrenom }}</td>
						</tr>
						<tr>
							<th>Date de naissance</th>
							<td>{{ athlete.dateNaiss ? athlete.dateNaiss|date('d/m/Y') : '' }}</td>
						</tr>
						<tr>
							<th>Photo</th>
							<td><img src={{athlete.photo}} width="100" height="100"></td>
						</tr>
						<tr>
							<th>Genre</th>
							<td>{{ athlete.genre }}</td>
						</tr>
						<tr>
							<th>Taille</th>
							<td>{{ athlete.taille }}
								cm</td>
						</tr>
						<tr>
							<th>Poids</th>
							<td>{{ athlete.poids }}
								kg</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>

		<hr>

		<table class="table">
			<div class="text-center">
				<h1>Discipline(s) associée(s)</h1>
				<h5>{{athlete.discipline | length}}
					athlète(s) trouvé(s)
				</h5>
			</div>
			<thead>
				<tr>
					<th>Nom</th>
					<th>Sport</th>
					<th>Description</th>
					<th>Logo</th>
				</tr>
			</thead>
			<tbody>
				{% for discipline in athlete.discipline %}
					<tr>
						<td>
							{# <a href="{{ path('app_category_show', {'id': discipline.nomDis }) }}"> #}
							LIEN ICI
							{{discipline.sportDis}}
							{# </a> #}
						</td>
						<td>{{discipline.nomDis}}</td>
						<td>{{discipline.descriptionDis}}</td>
						<td>
							<img src={{discipline.logoDis}} width="100" height="100">
						</td>
					</tr>
				{% else %}
					<tr>
						<td class="text-center" colspan="4">Aucune discipline</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
