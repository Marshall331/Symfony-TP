<!DOCTYPE html>

<title>Athlete</title>

{% block body %}
    <h1>Athlete</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ athlete.id }}</td>
            </tr>
            <tr>
                <th>NomPrenom</th>
                <td>{{ athlete.nomPrenom }}</td>
            </tr>
            <tr>
                <th>DateNaiss</th>
                <td>{{ athlete.dateNaiss ? athlete.dateNaiss|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ athlete.photo }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ athlete.genre }}</td>
            </tr>
            <tr>
                <th>Taille</th>
                <td>{{ athlete.taille }}</td>
            </tr>
            <tr>
                <th>Poids</th>
                <td>{{ athlete.poids }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_athlete_index') }}">back to list</a>

    <a href="{{ path('app_athlete_edit', {'id': athlete.id}) }}">edit</a>

    {{ include('athlete/_delete_form.html.twig') }}
{% endblock %}
